<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/corner"
        android:layout_width="@dimen/med_length"
        android:layout_height="@dimen/med_length"
        android:background="@color/red"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/prime"
        android:layout_width="@dimen/med_length"
        android:layout_height="@dimen/large_length"
        android:layout_marginStart="125dp"
        android:layout_marginTop="60dp"
        android:background="@color/red"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/corner" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/primeCen"
        android:layout_width="@dimen/large_length"
        android:layout_height="@dimen/large_length"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="15dp"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@id/h1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/primeRight"
        android:layout_width="@dimen/large_length"
        android:layout_height="@dimen/large_length"
        android:background="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/primeCenCen"
        android:layout_width="@dimen/small_length"
        android:layout_height="@dimen/small_length"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/primeCen"
        app:layout_constraintLeft_toLeftOf="@id/primeCen"
        app:layout_constraintRight_toRightOf="@id/primeCen"
        app:layout_constraintTop_toTopOf="@id/primeCen" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="@dimen/med_length"
        android:layout_height="@dimen/small_length"
        android:layout_marginBottom="@dimen/large_length"
        android:background="@color/black"
        android:onClick="layout5"
        android:text="@string/layout4"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>